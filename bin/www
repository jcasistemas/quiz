#!/usr/bin/env node
var debug = require('debug')('quiz');
var app = require('../app');

// Paso 19 - HttpS - http Seguro
var fs = require("fs");
var https = require("https");
var options = {
    key:  fs.readFileSync('certs/quiz-2015-key.pem').toString(),
    cert: fs.readFileSync('certs/quiz-2015-cert.pem').toString()
};


app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// Paso 19 - HttpS - http Seguro - Crear Servidor
var serverSecure = https.createServer(options, app);		
serverSecure.listen(8443, function() {		
  debug('Express server escuchando seguro en puerto: ' + server.address().port);		
  console.log('Express server escuchando seguro en puerto: ' + server.address().port);		
});		
